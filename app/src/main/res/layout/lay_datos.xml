<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <TextView
       android:id="@+id/tvPlaca"
       android:text="@string/placa"
       android:textColor="#C90039"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="30dp"
       android:textSize="18sp" />

    <EditText
        android:id="@+id/etPlaca"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlaca"
        android:layout_alignLeft="@+id/tvPlaca"
        android:layout_alignStart="@+id/tvPlaca"
        android:textSize="18sp"
        android:maxLength="3"
        android:ems="3"/>
    <TextView
        android:id="@+id/textView13"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="40sp"
        android:layout_alignBottom="@+id/etPlaca"
        android:layout_toRightOf="@+id/etPlaca"
        android:layout_toEndOf="@+id/etPlaca"
        />

    <EditText
        android:id="@+id/editText5"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/tvPlaca"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:maxLength="3"
        android:ems="3"/>


    <TextView
        android:id="@+id/tvContraseña"
        android:text="@string/contraseña"
        android:textColor="#C90039"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPlaca"
        android:layout_alignLeft="@+id/etPlaca"
        android:layout_alignStart="@+id/etPlaca"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/etContraseña"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvContraseña"
        android:layout_alignLeft="@+id/tvContraseña"
        android:layout_alignStart="@+id/tvContraseña"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        style="@style/Base.V7.Theme.AppCompat.Light"
        />

    <TextView
        android:id="@+id/tvTelefono"
        android:text="@string/telefono"
        android:textColor="#C90039"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etContraseña"
        android:layout_alignLeft="@+id/etContraseña"
        android:layout_alignStart="@+id/etContraseña"
        android:textSize="18sp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/etTelefono"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTelefono"
        android:layout_alignLeft="@+id/tvTelefono"
        android:layout_alignStart="@+id/tvTelefono"
        android:textSize="18sp"
        android:ems="9"
        android:maxLength="9"
        android:inputType="number"/>

    <TextView
        android:id="@+id/tvCodigo"
        android:text="@string/codigo"
        android:textColor="#C90039"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTelefono"
        android:layout_alignLeft="@+id/etTelefono"
        android:layout_alignStart="@+id/etTelefono"
        android:textSize="18sp"/>


    <EditText
        android:id="@+id/etCodigo"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCodigo"
        android:layout_alignLeft="@+id/tvCodigo"
        android:layout_alignStart="@+id/tvCodigo"
        android:textSize="18sp"
        android:maxLength="4"
        android:ems="4"
        android:inputType="number"/>



    <Button
        android:id="@+id/aceptar"
        android:text="@string/aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="aceptar"
        android:layout_below="@+id/etCodigo"
        android:layout_alignRight="@+id/tvContraseña"
        android:layout_alignEnd="@+id/tvContraseña"
        android:layout_marginTop="34dp" />




</RelativeLayout>